@import "nib"
@import "normalize.styl"
@import "fonts.styl"

//variables
gris_oscuro = #333333
gris_claro = #818181
rojo = #8D255B
gris_mas_claro = #F0F0F0

vendor-prefixes = moz webkit o ms

//Mixins
animacion(parametro)
	-webkit-animation parametro
	-moz-animation parametro
	-ms-animation parametro
	-o-animation parametro
	animation parametro


//valores por defecto
a
	text-decoration none
body
	font-size 16px

figure
	margin 0
img 
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss classes
.container
	font-size 0
	padding 1.4rem
	text-align center
.action 
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray 
		color gris_claro
.actions
	background rgba(black,.3)
	bottom 0
	left 0
	position absolute 
	right 0
.border
	border-bottom 1px solid gris_claro
.name 
	color gris_oscuro
.menu
	display none
.relative 
	position relative
.author
	color gris_claro

//utilities
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
		width 800px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size 0.8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.margin
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 100%
		width 75%
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
		animation 250s state infinite linear
		//animacion(1s state infinite)
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 10s circle infinite
		//animacion(1s circle infinite)
.header
	height 3.5em
	
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.song 
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em
.close-icon
	color gris_claro
	font-size 1.2em	
	position absolute
	right .5em
	top .5em
.playlist
	border-left 1px solid gris_claro
	display none
	padding 0 2em
	width 22em
	.list
		list-style none
	.item
		padding 1em 0
.isotipo
		width 122px
.logo
	background white 
	display none
	overflow hidden
	padding 1.3em 0
.avatar
	height 38px
	width 38px
.username
	color gris_claro
	margin-left .5em
	position relative
	top 8px
	&:after
		border-left 7px solid transparent
		border-right 7px solid trasnparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .5em
//declracion de animaciones
@keyframes state
	from
		width 0
	to
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:800px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing 
		padding-top .3em
		&.large
			margin 0 auto
			overflow hidden
			width 62.5em
	.music
		float left
		width 32.5em
		.description
			display none
	.header
		height auto
		border none
		.title
			display none
	.menu
		background gris_mas_claro
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item 
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				&:hover
					border-top 5px solid gris_claro
	.playlist
	.logo
		display block










