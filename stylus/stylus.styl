@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181
a
	text-decoration none
body
	font-size 16px

figure
	margin 0
//buttons
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
//oocss classes
.container
	padding 1.4rem
	font-size 0
	text-align center
.border
	border-bottom 1px solid gris_claro
.name 
	color gris_oscuro
.menu
	display none
.relative 
	position relative
.author
	color gris_claro
.header
	height 3.5em
	
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.song 
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 
	p
		margin .5em 0


